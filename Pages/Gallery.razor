@page "/gallery"

<h2 class="text-3xl font-bold mb-6 text-urbangold">The UrbanEra Gallery</h2>

<div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
    @foreach(var img in GalleryImages)
    {
          <div class="overflow-hidden rounded-2xl shadow-md hover:scale-105 transition-transform duration-300">
            <img src="@img" class="w-full h-64 object-cover" />
        </div>
    }
</div>

@code {
    List<string> GalleryImages = new()
        {
            "images/beanie1.jpg",
            "images/shoot2.jpg",
            "images/fmshoot.jpg",
            "images/shoot3.jpg",
            "images/socks1.jpg",
            "images/beaniesmoke.jpg",
            "images.beanie2.jpg"
        };
}